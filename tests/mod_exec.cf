
bundle agent myscripts()
   {
   # these are local and trusted, and might change objects that
   # are otherwise promised, so this should exec first
  
   executions:

     "/script/command"   

        args        => "-d -v -t" ,
        containment => sandbox ,
        module      => "true",      # follow protocol
        timeout     => "10",
        background  => "false",

        transaction => standard,
        classes     => react("ThisCommand");   # or use $(this)
   }

####################################################################

body containment sandbox

{
useshell => "true";
umask => "077";
owner => "mysql";
group => "daemon";
chdir => "/outputs";
chroot => "/sandbox";
}

####################################################################

body transaction standard

{
ifelapsed => "10";
}

####################################################################

body classes react(param)

{
success => { "okclass1", "okclass2" };
reportsuccess => "Everything went well with $(param)";

failure => { "failclass" };
reportfailure => "Error, failure of $(param)";

alert => { "alertclass1", "alertclass2", "alertclass3" };
reportalert => "DANGER, WILL ROBINSON!";
}