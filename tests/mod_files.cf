#########################################################
#
# files module
#
#########################################################

bundle agent filetest()
   {
   vars:

      "filelist" slist => { "/tmp/bla1", "/tmp/bla2" };
   files:

      "/path/file.*"  

            pathtype     => "regex",
            perms        => myperms,
            file_select  => myfilter,
            changes      => tripwire,
            depth_search => recurse("-2.3");

      "$(filelist)"

              ref    => "Every promise may have an id or explanation to refer by",
           perms     => myperms ,
           perms     => others("fish"); # ("white");

      "/etc/xyz" -> "cfagent"     # create a file

            create    => "true",
            touch     => "true",
            perms    => myperms;

      "/etc/abc/." -> "cfagent"   # create a directory

            create    => "true",
            perms    => myperms;

      "/usr/local"    

            linkto    => linkdetails("/site/mountpoint/local");


      "/var" 

            depth_search => recurse("inf"),
            delete       => tidymask,
            rename       => rotateme,
            repository   => "/override";
   }

#########################################################

body depth_search recurse(d)

{
depth   => "$(d)";
include => { ".*.exe", ".*.com" };
}

